<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="akka" type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.5.0.0" newVersion="4.5.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <akka>
    <hocon>
      <![CDATA[
        akka {
          actor {
            deployment {
              # This is for akka://ChartActors/user/charting
              /charting {
                # Make the "charting" actor exeute on the UI thread.
                # This will make this actor use SynchronizedDispatcher, which uses the current threads's  SynchronizationContext.
                # By default, actors use the ThreadPoolDispatcher.
                # We need the actor "charting" run on the UI thread so that it can directly access Winodws Forms controls.
                dispatcher = akka.actor.synchronized-dispatcher
              }
            }
          }
        }
      ]]>
    </hocon>
  </akka>
</configuration>